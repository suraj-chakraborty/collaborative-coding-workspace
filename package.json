{
  "name": "collab-coding",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--max-old-space-size=8192 concurrently \"pnpm --filter @collab-cloud/apps dev\" \"pnpm --filter @collab-cloud/agent dev\"",
    "build": "pnpm --filter @collab-cloud/apps build && pnpm --filter @collab-cloud/server build && pnpm --filter @collab-cloud/agent build",
    "start": "concurrently \"pnpm --filter @collab-cloud/apps start\" \"pnpm --filter @collab-cloud/agent start\"",
    "lint": "pnpm --filter @collab-cloud/apps lint && pnpm --filter @collab-cloud/server lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@prisma/client": "^7.3.0",
    "@types/dockerode": "^3.3.47",
    "@types/dotenv": "^8.2.3",
    "@types/node": "^22.19.7",
    "@types/simple-peer": "^9.11.9",
    "concurrently": "^9.1.2",
    "cross-env": "^10.1.0",
    "prisma": "^7.3.0",
    "tsx": "^4.19.2"
  },
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "@apollo/client": "^4.1.3",
    "cloudinary": "^2.9.0",
    "dotenv": "^17.2.4",
    "graphql": "^16.12.0",
    "lucide-react": "^0.563.0",
    "next-themes": "^0.4.6",
    "rxjs": "^7.8.2",
    "socket.io-client": "^4.8.3"
  }
}