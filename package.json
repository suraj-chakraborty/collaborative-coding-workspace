{
  "name": "collab-coding",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "set NODE_OPTIONS=--max-old-space-size=8192 && concurrently \"pnpm --filter @collab-cloud/apps dev\" \"pnpm --filter @collab-cloud/server dev\"",
    "build": "pnpm --filter @collab-cloud/apps build && pnpm --filter @collab-cloud/server build",
    "start": "concurrently \"pnpm --filter @collab-cloud/apps start\" \"pnpm --filter @collab-cloud/server start\"",
    "lint": "pnpm --filter @collab-cloud/apps lint && pnpm --filter @collab-cloud/server lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@prisma/client": "^7.3.0",
    "concurrently": "^9.1.2",
    "cross-env": "^10.1.0",
    "prisma": "^7.3.0",
    "tsx": "^4.19.2"
  },
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "@apollo/client": "^4.1.3",
    "graphql": "^16.12.0",
    "lucide-react": "^0.563.0",
    "next-themes": "^0.4.6",
    "rxjs": "^7.8.2"
  }
}